<Window x:Class="WpfApp.EditPatientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="EditPatientWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Фамилия"/>
            <TextBox x:Name="LastNameTextBox" Margin="0,5,0,10"/>
            <TextBlock Text="Имя"/>
            <TextBox x:Name="FirstNameTextBox" Margin="0,5,0,10"/>
            <TextBlock Text="Отчество"/>
            <TextBox x:Name="MiddleNameTextBox" Margin="0,5,0,10"/>
            <Button Content="Сохранить" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
